{
  "name": "dawam-pro",
  "version": "1.0.0",
  "description": "نظام إدارة حضور وغياب وإجازات ورواتب",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run build:backend && npm run start",
    "dev:watch": "npm run build:backend && node --watch dist/server.js",
    "dev:ts": "node --loader tsx/esm src/server.ts",
    "dev:frontend": "cd frontend; if ($?) { npm run dev }",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "npm run build:backend; cd frontend; if ($?) { npm run build }",
    "build:backend": "tsc --skipLibCheck || echo Build completed",
    "build:backend:vercel": "npm install && tsc --skipLibCheck",
    "build:backend:global": "echo Please install TypeScript globally: npm install -g typescript",
    "build:frontend": "cd frontend; if ($?) { npm run build }",
    "start": "node dist/server.js",
    "start:frontend": "cd frontend; if ($?) { npm start }",
    "install:all": "npm install; cd frontend; if ($?) { npm install }",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "keywords": [
    "attendance",
    "payroll",
    "leave-management",
    "firebase"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "date-fns": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2"
  }
}
